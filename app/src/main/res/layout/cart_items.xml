<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="25dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_alignParentTop="true"
                android:layout_marginTop="18dp"
                android:text="Extra Virgin Oil"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="128dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/tv1"
                android:layout_below="@+id/tv1"
                android:text="Suffola"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/tv1"
                android:layout_alignTop="@+id/tv3"
                android:background="@color/cardview_light_background"
                app:srcCompat="@drawable/add" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="57dp"
                android:gravity="center"
                android:text="1" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/img2"
                android:layout_toEndOf="@+id/tv3"
                app:srcCompat="@drawable/sub" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="36dp"
                android:text="Price"
                android:textColor="#000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv4"
                android:layout_width="49dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginEnd="-31dp"
                android:gravity="left"
                android:text="10"
                android:textColor="@color/cardview_dark_background"
                android:textSize="15sp" />


            <Button
                android:id="@+id/btn1"
                android:layout_width="75dp"
                android:layout_height="28dp"

                android:layout_alignBottom="@+id/img1"
                android:layout_alignStart="@+id/tv1"
                android:background="@drawable/buttonradius"
                android:text="Remove"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:text="@string/Rs"
                android:textSize="15sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>